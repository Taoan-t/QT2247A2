@model QT2247A2.Models.InvoiceWithDetailViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details for Invoice #@Model.InvoiceId</h2>

<div>
    @*<h4>InvoiceWithDetailViewModel</h4>*@
    <hr />
    <dl class="row">
        <dt class="col-sm-2 text-end">Customer Info</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerId) <br />
            @Html.DisplayFor(model => model.CustomerFirstName)
            @Html.DisplayFor(model => model.CustomerLastName) <br />
            @Html.DisplayFor(model => model.CustomerState),
            @Html.DisplayFor(model => model.CustomerCountry)
        </dd>
    </dl>

    <dl class="row">
        <dt class="col-sm-2 text-end">Billing Address</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BillingAddress)<br />
            @Html.DisplayFor(model => model.BillingCity),
            @Html.DisplayFor(model => model.BillingState) <br />
            @Html.DisplayFor(model => model.BillingCountry)
            @Html.DisplayFor(model => model.BillingPostalCode)
        </dd>
    </dl>

    <hr />
    <dl class="row">
        <dt class="col-sm-2 text-end">Sales Rep</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerEmployeeFirstName)
            @Html.DisplayFor(model => model.CustomerEmployeeLastName)
        </dd>

        <dt class="col-sm-2 text-end">
            @Html.DisplayNameFor(model => model.InvoiceDate)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InvoiceDate)
        </dd>

        <dt class="col-sm-2 text-end">
            @Html.DisplayNameFor(model => model.Total)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
    </dl>

    <h4>Line Items</h4>
    <table class="table table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceLines.First().InvoiceLineId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceLines.First().UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceLines.First().Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceLines.First().LinePrice)
            </th>
        </tr>
        @foreach(var line in Model.InvoiceLines)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => line.InvoiceLineId)
                    </td>
                    <td>
                        @Html.DisplayFor(model => line.UnitPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(model => line.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(model => line.LinePrice)
                    </td>
                </tr>
            }
    </table>
  
</div>
<p>
    @*@Html.ActionLink("Edit", "Edit", new { id = Model.InvoiceId }) |*@
    @Html.ActionLink("Back to List", "Index")
</p>
